{
    "name": "rustamalihussaini/weight-conversions",
    "description": "This is my package weight-conversions",
    "keywords": [
        "RustamAliHussaini",
        "weight-conversions"
    ],
    "homepage": "https://github.com/rustamalihussaini/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "RustamAliHussaini",
            "email": "101309331+RustamAliHussaini@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^3.7",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "RustamAliHussaini\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RustamAliHussaini\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
